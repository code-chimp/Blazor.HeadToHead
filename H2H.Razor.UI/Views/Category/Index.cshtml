@model System.Collections.Generic.IEnumerable<H2H.Models.Category>

@{
  Layout = "_Layout";
}

<div class="border p-4 bg-white">
  <div class="row">
    <div class="col-9">
      <h2 class="text-info">Category List</h2>
    </div>
    <div class="col-3" text="right">
      <a asp-action="Upsert" class="btn btn-info form-control">Create New</a>
    </div>
  </div>
  <br/>
  <div>
    @if (Model.Any())
    {
      <table class="table table-striped border">
        <thead>
        <tr class="table-secondary">
          <th>Category Name</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
          <tr>
            <td>@category.Name</td>
            <td class="text-right">
              <a asp-action="Upsert" asp-route-Id="@category.Id" class="btn btn-primary text-white">Edit</a>
              <a asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger text-white">Delete</a>
            </td>
          </tr>
        }
        </tbody>
      </table>
    }
    else
    {
      <p><b>Please add some categories&hellip;</b></p>
    }
  </div>
</div>
