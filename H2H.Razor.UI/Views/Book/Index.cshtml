@model System.Collections.Generic.IEnumerable<H2H.Models.Book>

@{
  Layout = "_Layout";
}
<br/>
<br/>
<div class="border p-4 bg-white">
  <div class="row">
    <div class="col-8">
      <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-4">
      @* <a asp-action="Upsert" class="btn btn-info form-control">Create New</a> *@
    </div>
  </div>
  <br/>
  <div>
    @if (Model.Any())
    {
      <table class="table table-striped border">
        <thead>
        <tr class="table-secondary">
          <th>Title</th>
          <th>ISBN</th>
          <th>Price</th>
          <th>Publisher</th>
          @* <th>Authors</th> *@
          <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var book in Model)
        {
          <tr>
            <td>@book.Title</td>
            <td>@book.ISBN</td>
            <td>@book.Price</td>
            <td>@book.Publisher.Name</td>
            @* <td> *@
            @*   @string.Join(", ", book.BookAuthors.Select(bookAuthor => bookAuthor.Author.FullName).ToArray()) *@
            @* </td> *@
            <td>
              @* <a asp-action="Upsert" asp-route-id="@book.Book_Id" class="btn btn-primary text-white">Edit</a> *@
              @* <a asp-action="Details" asp-route-id="@book.Book_Id" class="btn btn-info text-white">Details</a> *@
              @* <a asp-action="ManageAuthors" asp-route-id="@book.Book_Id" class="btn btn-success text-white">Authors</a> *@
              @* <a asp-action="Delete" asp-route-id="@book.Book_Id" class="btn btn-danger text-white">Delete</a> *@
            </td>
          </tr>
        }
        </tbody>
      </table>
    }
    else
    {
      <p>
        <b>Please add some books&hellip;</b>
      </p>
    }
  </div>
</div>
