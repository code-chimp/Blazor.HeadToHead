@using H2H.Blazor.UI.Models

@if (Show)
{
  <div class="modal" tabindex="-1" role="dialog" style="display:block">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          @HeaderContent
          <button class="close" @onclick="Close">
            <span aria-hidden="true">X</span>
          </button>
        </div>
        <div class="modal-body">
          <EditForm Context="formContext"
                    Model=@vm
                    OnValidSubmit=@Save>
            <ValidationSummary/>
            <DataAnnotationsValidator/>

            <div class="form-group">
              <label for="Book">Book: </label>
              <InputText class="form-control"
                         id="Book"
                         disabled
                         @bind-Value="vm.Book.Title"/>
            </div>

            <div class="form-group">
              <label for="NumberOfChapters"># of Chapters: </label>
              <InputNumber class="form-control"
                           id="NumberOfChapters"
                           @bind-Value="vm.BookDetail.NumberOfChapters"/>
            </div>

            <div class="form-group">
              <label for="NumberOfPages"># of Pages: </label>
              <InputNumber class="form-control"
                           id="NumberOfPages"
                           @bind-Value="vm.BookDetail.NumberOfPages"/>
            </div>

            <div class="form-group">
              <label for="Weight">Weight(kg): </label>
              <InputNumber class="form-control"
                           id="Weight"
                           @bind-Value="vm.BookDetail.Weight"/>
            </div>

            <div class="form-group">
              <label for="Description">Description: </label>
              <InputTextArea class="form-control"
                             id="Description"
                             @bind-Value="vm.BookDetail.Description"/>
            </div>

            <button type="submit" class="btn btn-primary">
              @(vm.BookDetail.Id == 0 ? "Add" : "Save")
            </button>
          </EditForm>
        </div>
      </div>
    </div>
  </div>
}

@code {

  [Parameter]
  public BookDetailsViewModel vm { get; set; }

  [Parameter]
  public EventCallback Close { get; set; }

  [Parameter]
  public EventCallback Save { get; set; }

  [Parameter]
  public bool Show { get; set; }

  [Parameter]
  public RenderFragment HeaderContent { get; set; }

}
